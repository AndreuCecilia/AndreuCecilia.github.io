---
import Check from "../components/icons/Check.astro"
import Micro from "../components/icons/Micro.astro"

// Array de datos simplificado
const teaching = [
    {
        university: "Universitat Politècnica de Catalunya (UPC)",
        courses: [
            { year: "2024 -", description: "Non linear Control Systems (24 h)" },
            { year: "2023 -", description: "Modelling, Identification and Simulation of Dynamical Systems (7,5 h)" },
            { year: "2023 -", description: "Fuel Cells (4 h)" },
            { year: "2021-2022", description: "Dynamical Systems (45 h) y Automatic Control (12 h)" },
        ],
    },
    {
        university: "Université Claude Bernard Lyon 1",
        courses: [
            { year: "2023", description: "Automatique 1 (16 h) y Automatique des Systèmes Dynamiques Linéaires 1 (12 h)" },
        ],
    },
];
---

<section id="teaching" class="w-full mx-auto lg:w-[1200px] p-10 md:p-14 scroll-m-10">
    <h2 class="text-wrap pl-7 hover:animate-pulse">
        <span class="flex items-center space-x-2 uppercase">
            <Micro />
            <span class="md:pl-0 lg:pl-4">Teaching</span>
        </span>
    </h2>

    {teaching.map((institution) => (
        <div>
            <h3 class="md:pl-4 lg:pl-12 pt-8 pb-4">
                <span class="flex items-center space-x-2">
                    <Check />
                    <span>{institution.university}</span>
                </span>
            </h3>
            <ul class="md:pl-5 lg:pl-10">
                {institution.courses.map((course) => (
                    <li>
                        <strong class="text-white/90">{course.year}</strong> {course.description}
                    </li>
                ))}
            </ul>
        </div>
    ))}
</section>
