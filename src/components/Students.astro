<section id="students" class="w-full mx-auto pt-10 md:pt-14 scroll-m-10">
  <!-- PhD Students -->
  <h2 class="text-wrap hover:animate-pulse">
    <span class="flex items-center space-x-2 uppercase">
      <Phd />
      <span class="md:pl-0 lg:pl-4">Ph.D. Students</span>
    </span>
  </h2>

  <ul class="pt-8">
    {phdStudents.map(student => (
      <li class="pt-3">
        <strong class="text-teal-600/90 flex items-center space-x-2">
          <Loading class="hidden md:inline-block w-6 h-6 lg:w-8 lg:h-8 mr-1 animate-spin" />
          {student.title}
        </strong>
        <p>
          <strong class="text-white">{student.years}</strong> - {student.name} - {student.program}
        </p>
      </li>
    ))}
  </ul>

  <!-- Bachelor/M.Sc. Students -->
  <h2 id="projects" class="text-wrap pt-16 hover:animate-pulse">
    <span class="flex items-center space-x-2 uppercase">
      <Bbs />
      <span class="">Bachelor/M. Sc. Students</span>
    </span>
  </h2>

  <ul class="pt-8">
    {bachelorStudents.map(student => (
      <li class="pt-3">
        <strong class="text-teal-600/90 flex items-center space-x-2">
          
          {student.link ? <a href={student.link}>{student.title}</a> : student.title}
        </strong>
        <p>
          <strong class="text-white">{student.years}</strong> - {student.name} - {student.program}
        </p>
      </li>
    ))}
  </ul>
</section>
